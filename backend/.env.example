# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Project Settings
PROJECT_NAME="High Risk Client Review Workflow"
API_V1_STR="/api/v1"
ENVIRONMENT="development"
DEBUG=true

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/hrcrw_db"

# Security Settings
SECRET_KEY="your-super-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# CORS Settings (comma-separated list)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000"

# Trusted Hosts (comma-separated list)
ALLOWED_HOSTS="localhost,127.0.0.1"

# AWS Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="hrcrw-documents"

# Email Configuration (AWS SES)
SES_FROM_EMAIL="noreply@yourcompany.com"
SES_REPLY_TO_EMAIL="support@yourcompany.com"
SES_CONFIGURATION_SET=""